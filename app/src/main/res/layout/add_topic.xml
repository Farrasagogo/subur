<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar/Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addTopicToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_green_dark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/tambah_topik_baru"/>

    <!-- Scrollable Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addTopicToolbar"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitTopic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Topic Title Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTopicTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTopicTitle"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="@string/judul_topik"
                    android:inputType="text|textMultiLine"
                    android:gravity="top|start"
                    android:maxLength="100"
                    android:maxLines="3"
                    android:scrollbars="vertical"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Topic Description Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTopicDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Spinner Placeholder -->
        </LinearLayout>
    </ScrollView>

    <!-- Submit Topic Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_topik"
        android:padding="16dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>